@model IEnumerable<ADODemo.Controllers.Student>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <style>
        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        th {
            background-color: #4CAF50;
            color: white;
        }
    </style>
</head>

<body>
    <div>
        HellSkippers Student List
    </div>
    @Html.ActionLink("Create Student","Create","Students")
    <table>
        <tr>
            <th>
                Student Name
            </th>
            <th>
                Phone Number
            </th>
            <th>
                Email Id
            </th>
        </tr>
        @foreach(var m in Model)
        {
            <tr>
                <td>@m.StudentName</td>
                <td>@m.PhoneNumber</td>
                <td>@m.EmailId</td>
            </tr>
        }
    </table>
</body>
</html>
