
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create Student</title>
</head>
<body>
    <div> 
        @using (Html.BeginForm("Create", "Students", FormMethod.Post))
        {
        <table>
            <tr>
                <td>
                    Student Name
                </td>
                <td>
                    @Html.TextBox("StudentName")
                </td>
            </tr>
            <tr>
                <td>
                    Email ID
                </td>
                <td>
                    @Html.TextBox("EmailId")
                </td>
            </tr>
            <tr>
                <td>
                    Phone Number
                </td>
                <td>
                    @Html.TextBox("PhoneNumber")
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <button>Save</button>
                </td>
            </tr>
        </table>
        }
    </div>
</body>
</html>
